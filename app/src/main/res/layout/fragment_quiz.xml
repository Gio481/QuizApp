<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_100"
    tools:context=".presentation.quiz.ui.QuizFragment">

    <View
        android:id="@+id/blackViewBackground"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_250_dp"
        android:background="@color/black_200"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/backIconImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_15_dp"
        android:background="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/quizNameTextView"
        style="@style/HighText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="გეოგრაფია" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/MediumText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dimen_20_dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@id/blackViewBackground"
        app:layout_constraintTop_toTopOf="@id/blackViewBackground"
        tools:text="რომელია ყველაზე დიდი ჩანჩქერი" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/answersRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0_dp"
        app:layout_constraintBottom_toTopOf="@id/nextQuestionButton"
        android:layout_margin="@dimen/dimen_30_dp"
        app:layout_constraintTop_toBottomOf="@id/blackViewBackground" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextQuestionButton"
        style="@style/MediumText"
        android:layout_width="@dimen/dimen_250_dp"
        android:layout_marginBottom="@dimen/dimen_50_dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_30_dp"
        android:background="@drawable/button_background"
        android:text="@string/next_question_text"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>