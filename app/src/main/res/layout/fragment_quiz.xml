<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6F1F3"
    tools:context=".presentation.quiz.ui.QuizFragment">

    <View
        android:id="@+id/blackView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_250_dp"
        android:background="@color/black_200"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/backIconImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_15_dp"
        android:background="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/quizNameTextView"
        style="@style/HighText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="გეოგრაფია" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/MediumText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dimen_20_dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@id/blackView"
        app:layout_constraintTop_toTopOf="@id/blackView"
        tools:text="რომელია ყველაზე დიდი ჩანჩქერი" />

    <com.example.quizapp.presentation.quiz.custom_view.QuizAnswerCustomView
        android:id="@+id/firstQuizAnswerCustomView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_30_dp"
        android:layout_marginTop="@dimen/dimen_30_dp"
        app:layout_constraintTop_toBottomOf="@id/blackView" />

    <com.example.quizapp.presentation.quiz.custom_view.QuizAnswerCustomView
        android:id="@+id/secondQuizAnswerCustomView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_30_dp"
        android:layout_marginVertical="@dimen/dimen_20_dp"
        app:layout_constraintTop_toBottomOf="@id/firstQuizAnswerCustomView" />

    <com.example.quizapp.presentation.quiz.custom_view.QuizAnswerCustomView
        android:id="@+id/thirdQuizAnswerCustomView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_30_dp"
        android:layout_marginVertical="@dimen/dimen_20_dp"
        app:layout_constraintTop_toBottomOf="@id/secondQuizAnswerCustomView" />

    <com.example.quizapp.presentation.quiz.custom_view.QuizAnswerCustomView
        android:id="@+id/fourthQuizAnswerCustomView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_30_dp"
        android:layout_marginVertical="@dimen/dimen_20_dp"
        app:layout_constraintTop_toBottomOf="@id/thirdQuizAnswerCustomView" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextQuestionButton"
        style="@style/MediumText"
        android:layout_width="@dimen/dimen_250_dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_30_dp"
        android:background="@drawable/button_background"
        android:text="@string/next_question_text"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fourthQuizAnswerCustomView" />


</androidx.constraintlayout.widget.ConstraintLayout>