<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SmallText" parent="BaseText">
        <item name="android:textSize">@dimen/dimen_12_sp</item>
    </style>

    <style name="MediumText" parent="BaseText">
        <item name="android:textSize">@dimen/dimen_16_sp</item>
    </style>

    <style name="HighText" parent="BaseText">
        <item name="android:textSize">@dimen/dimen_20_sp</item>
    </style>
</resources>